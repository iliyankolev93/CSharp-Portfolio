@model List<Project03_ExpenseWebApp.Models.Expense>

<h2>All Expenses</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    Add New Expense
</a>

<table class="table table-bordered table-striped">

    <tr>
        <th>Title</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>

    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Title</td>
            <td>@e.Amount</td>
            <td>@e.Category</td>
            <td>@e.Date.ToShortDateString()</td>

            <td>
                <a asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@e.Id"
                   onclick="return confirm('Are you sure?');">
                    Delete
                </a>
            </td>
        </tr>
    }

</table>